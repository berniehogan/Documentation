  "private": true,
  "devDependencies": {
    "markdown-spellcheck": "^1.3.1"
  },
  "scripts": {
    "spellcheck": "mdspell --en-us --ignore-numbers --ignore-acronyms --no-suggestions --report '**/*.md' '!**/node_modules/**/*.md'",
